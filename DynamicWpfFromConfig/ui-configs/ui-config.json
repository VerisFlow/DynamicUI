      "margin": "5",
      "verticalAlignment": "Center"
    },
    {
      "type": "Button",
      "name": "SaveButton",
      "content": "Save Config",
      "action": "exportdata_and_close",
      "gridRow": 2,
      "gridColumn": 1,
      "margin": "10",
      "padding": "10,5",
      "horizontalAlignment": "Right",
      "verticalAlignment": "Bottom"
    }
  ],
  "dataExport": {
    "targetFile": "C:\\Users\\Chu\\Documents\\GitHub\\DynamicWpf\\Output\\sample_run.csv",
    "includeHeaders": true,
    "writeMode": "overwrite",
    "mappings": [
      {
        "columnHeader": "StepName",
        "sourceControlName": "StepName"
      }
    ]
  }
}