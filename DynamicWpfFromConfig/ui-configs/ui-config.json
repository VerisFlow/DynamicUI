{
  "window": {
    "title": "SampleProcessingDialog2",
    "width": 450,
    "height": 200,
    "sizeToContent": "Manual",
    "minWidth": 300,
    "minHeight": 150
  },
  "theme": {
    "background": "#FF2D2D30",
    "foreground": "#FFFFFFFF",
    "controlBackground": "#FF3F3F46",
    "accent": "#FF007ACC",
    "accentForeground": "#FFFFFFFF",
    "borderColor": "#FF555555",
    "errorForeground": "#FFFF8A8A"
  },
  "layoutDefinition": {
    "columnDefinitions": [
      "Auto",
      "*"
